<h1>Meet Parents</h1>
<hr>

<div class="card">
  <div class="card-header">
    <h4>Narrow your results:</h4>
  </div>
  <div class="card-body">
      <div class="container text-start">
      <div class="row">
        <div class="col">
        <%= search_form_for @q do |f| %>
          <div class="form-label">
          <%= f.label :first_name, "First Name" %>
          <%= f.text_field :first_name, :placeholder => "Enter name" %>
        </div>
                  <div class="form-label">
          <%= f.label :zipcode, "Zipcode" %>
          <%= f.text_field :zipcode, :placeholder => "Enter zipcode" %>
        </div>
        </div>
        <div class="col">
        <div>
          <%= f.label :occupation, "Occupation" %>
          <%= f.text_field :occupation, :placeholder => "Enter occupation" %>
        </div>
                  <div>
          <%= f.label :language_1, "Language" %>
          <%= f.text_field :language_1, :placeholder => "Enter language"%>
          <p>
        </div>
        </div>
        <div class="col">
        <div>
          <%= f.label :religion, "Religion" %>
          <%= f.text_field :religion, :placeholder => "Enter religion" %>
          <div>
          <%= f.label :nationality_1, "Nationality" %>
          <%= f.text_field :occupation, :placeholder => "Enter nationality"%>
        </div>
        </div>
        </div>
      </div>
    </div>
    <%= f.submit :class => "btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>

<div >
    <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Zipcode</th>
        <th>Occupation</th>
        <th>Language</th>
        <th>Religion</th>
        <th>Nationality</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @user.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.zipcode %></td>
          <td><%= user.occupation %></td>
          <td><%= user.language_1 %></td>
          <td><%= user.religion %></td>
          <td><%= user.nationality_1 %></td>
        </tr>
      <% end %>
    </tbody>
